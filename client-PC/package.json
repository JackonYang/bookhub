{
  "name": "bookhub",
  "version": "1.0.0",
  "description": "book management and sharing",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run watch\" \"npm run start-electron\"",
    "start-electron": "webpack --config webpack.config.electron.js && electron .",
    "watch": "./node_modules/.bin/webpack-dev-server --config webpack.config.react.js",
    "build-react": "webpack --config webpack.config.react.js",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=renderer/assets/icons/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=renderer/assets/icons/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"BookHub\"",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --icon=renderer/assets/icons/icon.png --prune=true --out=release-builds"
  },
  "author": "Jackon Yang",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^3.5.1",
    "electron": "^1.7.12",
    "filesize": "^3.6.0",
    "md5-file": "^3.2.3",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0",
    "redux": "^3.7.2",
    "sqlite3": "^3.1.13",
    "wildcard": "^1.1.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "css-loader": "^0.28.9",
    "electron-packager": "^10.1.2",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.7.3",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "is-electron-renderer": "^2.0.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-target-electron-renderer": "^0.4.0"
  }
}
